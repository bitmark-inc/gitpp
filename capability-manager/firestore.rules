rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read: if true
      allow write: if
      		 request.auth != null && 
           exists(/databases/$(database)/documents/adminRole/$(request.auth.uid))
    }
    match /users/{user} {
    	allow read, write: if request.auth != null && user == request.auth.uid;
      allow create: if request.auth != null;
    }
  }
}